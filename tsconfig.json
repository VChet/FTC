{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "importsNotUsedAsValues": "error"
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
